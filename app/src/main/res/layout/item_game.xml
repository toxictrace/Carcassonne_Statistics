<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Фрейм -->
        <ImageView
            android:id="@+id/game_frame"
            android:layout_width="246dp"
            android:layout_height="125dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Пустое пространство для смещения даты вниз -->
        <View
            android:id="@+id/spacer"
            android:layout_width="0dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toTopOf="@id/game_frame"
            app:layout_constraintStart_toStartOf="@id/game_frame"
            app:layout_constraintEnd_toEndOf="@id/game_frame" />

        <!-- Дата -->
        <TextView
            android:id="@+id/game_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            app:layout_constraintTop_toBottomOf="@id/spacer"
            app:layout_constraintStart_toStartOf="@id/game_frame"
            app:layout_constraintEnd_toEndOf="@id/game_frame"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Игроки -->
        <TextView
            android:id="@+id/players_row1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        app:layout_constraintTop_toBottomOf="@id/game_date"
        app:layout_constraintStart_toStartOf="@id/game_frame"
        app:layout_constraintEnd_toEndOf="@id/game_frame"
        app:layout_constraintHorizontal_bias="0.5" />

        <TextView
            android:id="@+id/players_row2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            app:layout_constraintTop_toBottomOf="@id/players_row1"
            app:layout_constraintStart_toStartOf="@id/game_frame"
            app:layout_constraintEnd_toEndOf="@id/game_frame"
            app:layout_constraintHorizontal_bias="0.5" />

        <TextView
            android:id="@+id/players_row3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            app:layout_constraintTop_toBottomOf="@id/players_row2"
            app:layout_constraintStart_toStartOf="@id/game_frame"
            app:layout_constraintEnd_toEndOf="@id/game_frame"
            app:layout_constraintHorizontal_bias="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>