<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовая тема приложения -->
    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_primary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="colorControlNormal">@color/secondary</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <!-- Стиль для спиннеров -->
    <style name="Widget.App.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:popupBackground">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>